<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_Dialog_Nickname_Change"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="修改昵称"
            android:textColor="@color/route_info"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText_dialog_nickname_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入 5-10 个字符的新昵称"
            android:imeOptions="actionDone"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView_dialog_nickname_times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="昵称修改次数: 3 次/年"
            android:textColor="@color/route_info2"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_nickname_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:text="取消"
            android:textColor="@color/datepicker_selectedTextColor"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>