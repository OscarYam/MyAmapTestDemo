                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <com.example.myamaptestdemo.RoundImageView
                        android:id="@+id/imageViewUser"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/ic_launcher_round"
                        app:type="circle" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2UserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="textView2UserName"
                            android:textColor="@color/route_info"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID: "
                                android:textColor="@color/route_info2" />

                            <TextView
                                android:id="@+id/textView2UserID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="textView2UserID"
                                android:textColor="@color/route_info2" />
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageViewSettings"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@android:drawable/ic_menu_preferences" />

                </LinearLayout>

                <LinearLayout
